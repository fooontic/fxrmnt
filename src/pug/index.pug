					//- 	.ruler-info.wow.fadeInDown
					//- 		img(src="img/calc-info.png", alt="Линейка выбора площади")
								
					.ruler__video
						video(autoplay loop muted poster="img/ruler.jpg")
							source(src="video/ruler2_5_1.mp4" type="video/mp4")
					.ruler-info.wow.fadeInDown
						img(src="img/calc-info.png", alt="Линейка выбора площади")

				//- .container-cases
				//- 	.case
				//- 		.case__video
				//- 			video(autoplay loop muted)
				//- 				source(src="video/calc.webm" type="video/webm")
				//- 				source(src="video/calc.mp4" type="video/mp4")
				
				.calculator__pieces
					figure.calculator__pieces-item
						.frame
							img(src="img/calc-1.jpg", alt="Карточки выбора дизайна")
						figcaption Выбор стиля
						
					figure.calculator__pieces-item
						.frame
							img(src="img/calc-2.jpg", alt="Параметры калькулятора")
						figcaption Настройка
						
					figure.calculator__pieces-item
						.frame
							img(src="img/calc-3.jpg", alt="Итоговая смета")
						figcaption Итоговая смета
						
					figure.calculator__pieces-item
						.frame
							img(src="img/calc-4.jpg", alt="Обзор выбранного")
						figcaption Наглядный обзор выбранного



			section.components

				.container-cases
					h2.title.wow.slideInDown(data-wow-offset="100")
						span.wow.enterDown(data-wow-offset="100") Компонентная структура
					.flow.wow.slideInDown(data-wow-offset="100")
						p.wow.enterDown(data-wow-offset="100") Сайт состоит из&nbsp;взаимозаменяемых компонентов: группы информационных блоков. Это изображения с&nbsp;описанием, слайдеры, текстовые блоки, баннеры или выбор типа отделки. С&nbsp;таким подходом сайт становится простым конструктором: можно быстро создавать новые страницы, добавлять, удалять или менять местами компоненты, не&nbsp;опасаясь за&nbsp;внешний вид и&nbsp;аккуратность результата. Стили заранее настроены и&nbsp;обеспечена совместимость компонентов в&nbsp;любых комбинациях. Работа с&nbsp;сайтом идёт через разработанную для проекта систему администрирования.

					.case.wow(data-wow-offset="100")
						.components-bg(data-bottom-top="background-position: center 100%" data-top-bottom="background-position: center 40%")
						.frame
							.case__video.wow.enterDown(data-wow-offset="100")
								video(autoplay loop muted poster="img/admin.jpg")
									source(src="video/admin.webm" type="video/webm")
									source(src="video/admin.mp4" type="video/mp4")



			section.responsive

				.container-cases
					h2.title.wow.slideInDown(data-wow-offset="100")
						span.wow.enterDown(data-wow-offset="100") Адаптивная версия
					.flow.wow.slideInDown(data-wow-offset="100")
						p.wow.enterDown(data-wow-offset="100") Сайт адаптирован под все существующие размеры дисплеев и&nbsp;типы устройств. Пользователю комфортно использовать сервис как со&nbsp;стационарного компьютера, так с&nbsp;телефона, планшета или ноутбука.

					.responsive__screens(data-bottom-top="left[swing]: 0%" data-top-bottom="left[swing]: -66%")
						.responsive__screens-item
							img(src="img/mobile-1.png" alt="Мобильная версия главной страницы")
